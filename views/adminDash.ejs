<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8"/>
	<title>Admin Dashboard</title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
	<nav>
		<ul> 
		  <li><a class="navigation" href="cms.html">Home</a></li>
		  <li><a class="navigation" href="userEdit.html">Edit Login </a></li>
		  <li><a class="navigation" href="adminDash.html">Dashboard</a></li>
		</ul>
	</nav>
	<header>
		<h1>Dashboard</h1>
	</header>
	<h2> Table of Pages </h2>
	<h1>
			<form method = "POST" action="/admin/addpage">
				Add Page
				<input type="Submit" value="Submit">
			</form>
			<form method = "GET" action="/admin/editstuff">
				Edit Information
				<input type="Submit" value="Submit">
			</form>
	</h1>
	<table>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Updated</th>
			<th>Options</th>
	<% pages.forEach(function(page){ %>
		</tr>
			<tr>
				<th><%=page._id%></th>
				<th> <a href = "<%=page.url%>"> <%=page.title%></th>
				<th> 23:04:02 1/4/19 </th>
				<th>
					<form method = "POST" action="/admin/deletingpage/<%=page._id%>"><input type="submit" value="Remove"/></form>
					<form method = "POST" action="/admin/editpage/<%=page._id%>?"> <input type="submit" value="Edit"/></form>
					<form method = "GET" action="/admin/toggleVisibility/<%=page._id%>"> <input type="submit" value="Visible/Not Visible"/></form>
				</th>
			</tr>
		<% });%>
	</table>

</body>
</html>